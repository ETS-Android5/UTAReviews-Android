<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F7CE4"
    tools:context=".ReplyActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/review_database_result"
        android:layout_width="403dp"
        android:layout_height="405dp"
        android:background="#3F7CE4"
        app:layout_constraintBottom_toTopOf="@+id/Reply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />

    <Button
        android:id="@+id/Reply"
        android:layout_width="191dp"
        android:layout_height="62dp"
        android:text="Post Reply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Username_Comment"
        android:layout_width="388dp"
        android:layout_height="153dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/review_database_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>